<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:layout_weight="2"
        android:background="#E1978B"
        android:textSize="20sp"
        android:text="View 1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="4"
        android:background="#60D5A3"
        android:textSize="20sp"
        android:text="View 2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="4"
        android:background="#7FA4DA"
        android:textSize="20sp"
        android:text="View 4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    // margin : dãn cách ngoài view
    // padding : dãn cách trong view
    // layout_gravity : đi đến vị trí của thằng cha
    // gravity : đi đến vị trí trong kích thước của mình
    // Linear layout
    // orientation : hướng sắp xếp các view con
    // layout_weight : xin kích thước của view cha và cùng hướng
        với orientation
    // weight_sum : tổng số phần trong viewgroup
</LinearLayout>